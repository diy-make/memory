  "title": "Hierarchical Hourly Summary Template",
  "description": "Template for generating hierarchical chrono-fractal summaries of chat logs.",
  "template": {
    "structure": {
      "year": {
        "quarter": {
          "month": {
            "week": {
              "day": {
                "hourly_summary": [
                  {
                    "hour": "HH:00",
                    "conversation": [
                      {
                        "speaker": "user/agent",
                        "utterance": "..."
                      }
                    ]
                  }
                ]
              }
            }
          }
        }
      }
    }
  }
}
