{
  "version": "1.1",
  "attribution": "Anaximander (20251231-135827)",
  "title": "Heartwood Base Schema Specification",
  "description": "Universal schema definitions for Metagit JSON artifacts, enforcing array-based collections and unique identification.",
  "definitions": {
    "named_item": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "rationale": { "type": "string" },
        "path_to_scripting": { "type": "string" }
      },
      "required": ["name"]
    },
    "identified_item": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "description": { "type": "string" },
        "commands": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["id"]
    },
    "memory_file_schema": {
      "type": "object",
      "properties": {
        "principles": {
          "type": "array",
          "items": { "$ref": "#/definitions/named_item" }
        },
        "rules": {
          "type": "array",
          "items": { "$ref": "#/definitions/named_item" }
        },
        "steps": {
          "type": "array",
          "items": { "$ref": "#/definitions/named_item" }
        },
        "tasks": {
          "type": "array",
          "items": { "$ref": "#/definitions/identified_item" }
        }
      }
    }
  },
  "artifact_requirements": [
    "version",
    "attribution",
    "title"
  ]
}