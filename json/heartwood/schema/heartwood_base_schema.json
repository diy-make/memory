{
  "version": "1.2",
  "attribution": "Pyrrho (20260102-231500)",
  "title": "Heartwood Base Schema Specification",
  "description": "Universal schema definitions for Metagit JSON artifacts, enforcing array-based collections, unique identification, and contextual citations.",
  "definitions": {
    "named_item": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "rule": { "type": "string" },
        "rationale": { "type": "string" },
        "path_to_scripting": { "type": "string" },
        "example": { "type": "string" },
        "citations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": { "type": "string" },
              "path": { "type": "string" },
              "description": { "type": "string" }
            }
          }
        },
        "context_examples": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "required": ["name"]
    },
    "identified_item": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "description": { "type": "string" },
        "commands": { "type": "array", "items": { "type": "string" } },
        "status": { "type": "string" }
      },
      "required": ["id"]
    },
    "memory_file_schema": {
      "type": "object",
      "properties": {
        "principles": {
          "type": "array",
          "items": { "$ref": "#/definitions/named_item" }
        },
        "rules": {
          "type": "array",
          "items": { "$ref": "#/definitions/named_item" }
        },
        "values": {
          "type": "array",
          "items": { "$ref": "#/definitions/named_item" }
        },
        "steps": {
          "type": "array",
          "items": { "$ref": "#/definitions/named_item" }
        },
        "tasks": {
          "type": "array",
          "items": { "$ref": "#/definitions/identified_item" }
        }
      }
    }
  },
  "artifact_requirements": [
    "version",
    "attribution",
    "title"
  ]
}